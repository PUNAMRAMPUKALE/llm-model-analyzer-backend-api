{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Vitest globals (describe, it, expect)
    "types": ["vitest/globals"],

    // Ensures relative paths and aliases resolve correctly
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },

  // Include only app code + test types
  "include": ["src", "src/**/*.d.ts"],

  // Prevent tests from going into dist/
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
