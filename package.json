{
  "name": "backend-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",

    "lint": "eslint .",

    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",          
    "db:migrate:deploy": "prisma migrate deploy",                
    "db:studio": "node scripts/dev-only.js && prisma studio",     

    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "5.20.0",
    "axios": "1.7.7",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "morgan": "1.10.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.7",
    "@types/node": "22.7.5",
    "eslint": "9.12.0",
    "prisma": "5.20.0",
    "ts-node": "10.9.2",
    "tslib": "2.7.0",
    "tsc-alias": "1.8.10",
    "tsx": "4.19.1",
    "typescript": "5.6.3"
  }
}
